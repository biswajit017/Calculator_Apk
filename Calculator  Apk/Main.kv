<MyLayout>:
    BoxLayout:
        orientation:"vertical"
        size: root.width, root.height
        

        TextInput:
            id: calc_input
            text:'0'
            halign:"right"
            font_size: 55
            size_hint:(1,.25)
            background_normal:''
            background_color:(0.8, 0.8, 0.8, 1)

        GridLayout:
            cols:4
            rows:5

        #Rows
            Button:
                size_hint:(.15,.15)
                font_size:32
                text:'CE'
                # background_color:(157/255,157/255,155/255,1)
                on_press:root.remove()
            Button:
                size_hint:(.15,.15)
                font_size:32
                text:"%"
                # background_color:(157/255,157/255,155/255,1)
                on_press:root.modulous()

            Button:
                id:clear
                size_hint:(.15,.15)
                font_size:32
                text:"C"
                on_press: root.clear() 
                # background_color:(157/255,157/255,155/255,1)
            Button:
                size_hint:(.15,.15)
                font_size:32
                text:"/"
                on_press:root.division()
                # background_color:(157/255,157/255,155/255,1)
            Button:
                size_hint:(0.15,0.15)
                font_size:32
                text:"7"
                on_press: root.button_press(7) 
                background_color:(157/255,157/255,155/255,1)

            Button:
                size_hint:(0.15,0.15)
                font_size:32
                text:"8"
                on_press: root.button_press(8) 
                background_color:(157/255,157/255,155/255,1)
            Button:
                size_hint:(0.15,0.15)
                font_size:32
                text:"9"
                on_press: root.button_press(9) 
                background_color:(157/255,157/255,155/255,1)
            Button:
                size_hint:(0.15,0.15)
                font_size:32
                text:"*"
                on_press:root.multipication()
                # background_color:(157/255,157/255,155/255,1)
            Button:
                size_hint:(0.15,0.15)
                font_size:32
                text:"4"
                on_press: root.button_press(4) 
                background_color:(157/255,157/255,155/255,1)
            Button:
                size_hint:(0.15,0.15)
                font_size:32
                text:"5"
                on_press: root.button_press(5) 
                background_color:(157/255,157/255,155/255,1)
            Button:
                size_hint:(0.15,0.15)
                font_size:32
                text:"6"
                on_press: root.button_press(6) 
                background_color:(157/255,157/255,155/255,1)
            Button:
                size_hint:(0.15,0.15)
                font_size:37
                text:"-"
                on_press:root.substract()
                # background_color:(157/255,157/255,155/255,1)
            Button:
                size_hint:(0.15,0.15)
                font_size:32
                text:"1"
                on_press: root.button_press(1) 
                background_color:(157/255,157/255,155/255,1)
            Button:
                size_hint:(0.15,0.15)
                font_size:32
                text:"2"
                on_press: root.button_press(2) 
                background_color:(157/255,157/255,155/255,1)
            Button:
                size_hint:(0.15,0.15)
                font_size:32
                text:"3"
                on_press: root.button_press(3) 
                background_color:(157/255,157/255,155/255,1)
            Button:
                size_hint:(0.15,0.15)
                font_size:32
                text:"+"
                # background_color:(157/255,157/255,155/255,1)
                on_press:root.add()
            Button:
                size_hint:(0.15,0.15)
                font_size:32
                text:"+/-"
                on_press:root.pn()
                background_color:(157/255,157/255,155/255,1)
            Button:
                size_hint:(0.15,0.15)
                font_size:32
                text:"0"
                on_press: root.button_press(0) 
                background_color:(157/255,157/255,155/255,1)
            Button:
                size_hint:(0.15,0.15)
                font_size:32
                text:"."
                on_press: root.dot() 
                background_color:(157/255,157/255,155/255,1)

            Button:
                size_hint:(0.15,0.15)
                font_size:32
                text:"="
                background_normal:''
                background_color:(0.8, 0.4, 0, 1)
                on_press:root.equal()
            

                